{
  "server": {
    "host": "127.0.0.1",
    "port": 5000,
    "num_clients": 3,
    "fraction": 1.0,
    "aggregation_method": "fedavg"
  },
  "client": {
    "local_epochs": 2,
    "local_lr": 0.01,
    "batch_size": 32,
    "local_optimizer": "sgd",
    "momentum": 0.9
  },
  "model": {
    "name": "SimpleNN",
    "params": {
      "input_size": 784,
      "hidden_size": 128,
      "num_classes": 10
    }
  },
  "training": {
    "num_rounds": 5,
    "algorithm": "fedavg"
  },
  "data": {
    "dataset": "mnist",
    "data_dir": "./data",
    "non_iid": true,
    "shards_per_client": 2
  },
  "paths": {
    "checkpoint_dir": "./checkpoints",
    "log_dir": "./logs",
    "results_dir": "./results"
  },
  "device": "cpu",
  "seed": 42
}