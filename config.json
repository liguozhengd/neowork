{
  "project_name": "federated_learning_framework",
  "version": "1.0.0",
  
  "server": {
    "host": "127.0.0.1",
    "port": 5000,
    "num_clients": 10,
    "fraction": 0.3,
    "aggregation_method": "fedavg",
    "use_server_optimizer": false,
    "server_optimizer": "fedadam",
    "server_lr": 0.01,
    "eval_every": 1,
    "save_every": 5
  },
  
  "client": {
    "local_epochs": 5,
    "local_lr": 0.01,
    "batch_size": 32,
    "local_optimizer": "sgd",
    "momentum": 0.9,
    "weight_decay": 0.0001
  },
  
  "model": {
    "name": "SimpleNN",
    "params": {
      "input_size": 784,
      "hidden_size": 128,
      "num_classes": 10
    }
  },
  
  "training": {
    "num_rounds": 20,
    "algorithm": "fedavg",
    "fedprox_mu": 0.01,
    "use_differential_privacy": false,
    "epsilon": 1.0,
    "delta": 1e-5,
    "clip_threshold": 1.0
  },
  
  "data": {
    "dataset": "mnist",
    "data_dir": "./data",
    "train_split": 0.8,
    "non_iid": true,
    "shards_per_client": 2,
    "num_workers": 2
  },
  
  "paths": {
    "checkpoint_dir": "./checkpoints",
    "log_dir": "./logs",
    "results_dir": "./results"
  },
  
  "device": "cuda",
  "seed": 42,
  "debug": false
}